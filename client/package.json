{
  "name": "iot-dashboard-client",
  "description": "A dashboard enabling me to monitor and control custom IoT devices - client - to be run on RPi and displayed on a tablet",
  "private": true,
  "version": "2.1.0",
  "author": "Szymon Pulut",
  "email": "szymon.pulut@gmail.com",
  "url": "https://szymonpulut.com/",
  "type": "module",
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "codegen": "graphql-codegen --config codegen.json",
    "release": "standard-version",
    "prepare": "cd ../ && husky install ./client/.husky",
    "precommit": "lint-staged",
    "prettier": "prettier --write"
  },
  "dependencies": {
    "@apollo/client": "^3.8.4",
    "date-fns": "^2.30.0",
    "graphql": "^16.8.1",
    "graphql-ws": "^5.14.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.0.8"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/client-preset": "4.1.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^8.2.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "standard-version": "^9.5.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "lint-staged": {
    "{src,app,lib}/**/*.{ts,tsx,json,css}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
