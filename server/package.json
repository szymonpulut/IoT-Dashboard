{
  "name": "iot-dashboard-server",
  "description": "A dashboard enabling me to monitor and control custom IoT devices - server - to be run on RPi",
  "private": "true",
  "version": "2.1.0",
  "author": "Szymon Pulut",
  "email": "szymon.pulut@gmail.com",
  "url": "https://szymonpulut.com/",
  "type": "module",
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "concurrently \"nodemon\" \"graphql-codegen --config codegen.json --watch\"",
    "codegen": "graphql-codegen --config codegen.json",
    "genCodegen": "tsx scripts/generateJoinedGraphQLSchema.ts && cp joinedSchema.graphql dist/",
    "release": "standard-version",
    "prepare": "cd ../ && husky install ./server/.husky",
    "lint": "eslint --ext ts --report-unused-disable-directives --max-warnings 0",
    "precommit": "lint-staged",
    "prettier": "prettier --write"
  },
  "dependencies": {
    "@apollo/server": "^4.9.3",
    "@google-cloud/local-auth": "^3.0.0",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "google-auth-library": "^9.0.0",
    "googleapis": "^129.0.0",
    "graphql": "^16.8.1",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.14.0",
    "module-alias": "^2.2.3",
    "mqtt": "^5.0.5",
    "node-fetch": "^3.3.2",
    "typescript": "^5.2.2",
    "ws": "^8.14.2",
    "zod": "^3.22.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@graphql-eslint/eslint-plugin": "^3.20.1",
    "@parcel/watcher": "^2.3.0",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "concurrently": "^8.2.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^3.12.10"
  },
  "nodemonConfig": {
    "ext": "graphql,ts"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "lint-staged": {
    "{src,app,lib}/**/*.{ts,tsx,json,css}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
