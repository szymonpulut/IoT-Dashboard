{
  "compilerOptions": {
    "baseUrl": "",
    "outDir": "dist",
    "lib": ["es2020", "dom"],
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
